.container
  .row
    .page-header 
      h1 #{title}
      small 重度科幻影迷
.navbar.navbar-default.navbar-fixed-bottom
  .container
    .navbar-herder
      a.navbar-brand(href="/") 重度科幻影迷
    p.navbar-text.navbar-right
      a.navbar-link(href="#", data-toggle="modal" data-target="#singupModal") 注册
      span &nbsp;|&nbsp;
      a.navbar-link(href="#", data-toggle="modal" data-target="#singinModal") 登录
#singupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/singup")
        h4.modal-header 注册
        .modal-body
          .form-group
            label(for="singupName") 用户名
            input#singupName.form-control(name="user[name]" type="text")
          .form-group
            label(for="singupPassword") 密码
            input#singupPassword.form-control(name="user[password]" type="text")
        .modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
